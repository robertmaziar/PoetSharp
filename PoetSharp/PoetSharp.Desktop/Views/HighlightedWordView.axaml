<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:vm="using:PoetSharp.Desktop.ViewModels"
			 x:DataType="vm:HighlightedWordViewModel"
             x:Class="PoetSharp.Desktop.Views.HighlightedWordView">
	<Design.DataContext>
		<vm:MainWindowViewModel/>
	</Design.DataContext>
	<StackPanel Spacing="5">
		<!--<Border CornerRadius="10" ClipToBounds="True">
			<Panel Background="#7FFF22DD">
				<Image Width="200" Stretch="Uniform" Source="{Binding Cover}" />
				<Panel Height="200" IsVisible="{Binding Cover, Converter={x:Static ObjectConverters.IsNull}}">
					<PathIcon Height="75" Width="75" Data="{StaticResource music_regular}" />
				</Panel>
			</Panel>
		</Border>-->
		<!-- Display the word -->
		<TextBlock>
			<Run Text="{Binding Word}" Foreground="Red" />
			<Run Text="{Binding SyllableCount}" FontSize="10" Foreground="Green" />
		</TextBlock>

	</StackPanel>

</UserControl>
