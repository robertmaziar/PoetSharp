<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:vm="using:PoetSharp.Desktop.ViewModels"
			 xmlns:views="clr-namespace:PoetSharp.Desktop.Views"
			 x:DataType="vm:SentenceViewModel"
             x:Class="PoetSharp.Desktop.Views.SentenceView">
	<Design.DataContext>
		<vm:MainWindowViewModel/>
	</Design.DataContext>
	<StackPanel Spacing="5">
		<ListBox ItemsSource="{Binding WordGroup}" Margin="0 20">
			<ListBox.ItemsPanel>
				<ItemsPanelTemplate>
					<WrapPanel>
						<views:HighlightedWordView DataContext="{Binding WordGroup}" />
					</WrapPanel>
				</ItemsPanelTemplate>
			</ListBox.ItemsPanel>
		</ListBox>
	</StackPanel>
</UserControl>
